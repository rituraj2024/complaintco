    <section class="complaints">
      <div class="inprogress-complaints">
        
        <% if(action == 'view') { %>
          <h1>Complaints</h1>
        <table class="table">
          <thead style="text-align: center;">
            <tr>
              <th>Complaint id</th>
              <!-- <th>Roll No.</th> -->
              <th>Date</th>
              <th>Description</th>
              <th>No. of Upvotes</th>
              <th>Status</th>
              <th>Remarks</th>
              <th style="text-align: left;">Action</th>
            </tr>
          </thead>
          <tbody style="text-align: center;">
            <% if(dcomplaints.length > 0){
              dcomplaints.forEach(function(data) { %>
                <tr>
                  <td><%= data.cid %></td>
                  <!-- <td><%= data.rollno %></td> -->
                  <td style="text-align: left;"><%= data.date %></td>
                  <td><%= data.description %> </td>
                  <td><%= data.upvotes %></td>
                  <td name="status" id="<%= data.status %>" id="status"><%= data.status %></td>
                  <td name="remarks" id="<%= data.remarks %>" id="remarks"><%= data.remarks %></td>
                  <td style="text-align:center;"><a style="width: 80%" class="btn" href="/dcomplaints/edit/<%= data.cid %>">Edit</a></td>
                </tr>
            <%  });
            } %>
            
          </tbody>
        </table>
        
      </div>
    </section>
    <% } %>

    <div style="padding-top: 12%;">
      <% if(action == 'edit' && dcomplaints && cid){ %>
        <form method="post" action="/dcomplaints/edit/<%= cid %>">
          <h1 style="text-align: center;">Edit the complaint</h1>
          <div style="margin-left: 30%; padding: 5%">
            <label style="padding-bottom: 2%"><h3>Status</h3></label>      
              <!-- <select name="cars" id="cars" name="status" value="<%= dcomplaints.status %>" style="margin-left: 10%; border:#021d3f solid 1px; padding: 15px; text-align: center; -webkit-border-radius: 8; -moz-border-radius: 8; border-radius: 8px;">
                <option value="sent">Sent</option>
                <option value="accepted">Accepted</option>
                <option value="in progress">In Progress</option>
                <option value="">Completed</option>
              </select>  <br><br> -->
            <input type="text" name="status" value="<%= dcomplaints.status %>" style="margin-left:10%; border:#021d3f solid 1px; padding: 15px; text-align: center; -webkit-border-radius: 8; -moz-border-radius: 8; border-radius: 8px;"><br>
            <label style="padding-bottom: 2%"><h3>Remarks</h3></label>
            <input type="textarea" name="remarks" value="<%= dcomplaints.remarks %>" style="text-align: center; margin-left: 5.5%; border:#021d3f solid 1px; padding: 15px; -webkit-border-radius: 8; -moz-border-radius: 8; border-radius: 8px;"><br><br><br>
            <input type="submit" name="submit_button" id="edit-button" class="btn" style="color: #fff; margin-left: 45%;" value="Edit" href="/dcomplaints">
            <br><br>
            <button href="/dcomplaints" class="btn" style="margin-left: 0">Go Back</button>
          </div>
      </form>
      <% } %>
      <% if(!dcomplaints){ %>
          console.log("No data");
      <% } %>
