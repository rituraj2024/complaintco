      <script>
        let targetPageUrl;
        let targetDivId;
        const total = document.getElementById('total');
        const accepted = document.getElementById('accepted');
        const inprogress = document.getElementById('inprogress');
        const yet = document.getElementById('yet');

        function goToDivOnOtherPageTotal() {
          targetPageUrl = '/dcomplaints'; 
          targetDivId = 'total';
          window.location.href = `${targetPageUrl}#${targetDivId}`;
        }

        function goToDivOnOtherPageAccepted() {
          targetPageUrl = '/dcomplaints'; // Replace with the URL of the target page
          targetDivId = 'accepted'; // Replace with the ID of the target div
          window.location.href = `${targetPageUrl}#${targetDivId}`;
        }

        function goToDivOnOtherPageInProgress() {
          targetPageUrl = '/dcomplaints'; // Replace with the URL of the target page
          targetDivId = 'inprogress'; // Replace with the ID of the target div
          window.location.href = `${targetPageUrl}#${targetDivId}`;
        }

        function goToDivOnOtherPageYet() {
          targetPageUrl = '/dcomplaints'; // Replace with the URL of the target page
          targetDivId = 'yet'; // Replace with the ID of the target div
          window.location.href = `${targetPageUrl}#${targetDivId}`;
        }

        total.addEventListener('click', () => {
          goToDivOnOtherPageTotal();
        });

        accepted.addEventListener('click', () => {
          goToDivOnOtherPageAccepted();
        });

        inprogress.addEventListener('click', () => {
          goToDivOnOtherPageInProgress();
        });

        yet.addEventListener('click', () => {
          goToDivOnOtherPageYet();
        });
      </script>
